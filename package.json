{
  "name": "react-module-template",
  "version": "0.0.1",
  "description": "A template repo for React and TypeScript component modules",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "scripts": {
    "build": "rollup -c",
    "lint": "eslint src/**",
    "test": "jest"
  },
  "keywords": [
    "react",
    "typescript",
    "npm"
  ],
  "author": "Ethan Arrowood <ethan.arrowood@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/dom": "^7.15.0",
    "@testing-library/jest-dom": "^5.10.1",
    "@testing-library/react": "^11.0.2",
    "@types/jest": "^26.0.0",
    "@types/react": "^17.0.0",
    "@types/testing-library__react": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^4.1.0",
    "eslint": "^7.2.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jest": "^24.0.0",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "jest": "^27.0.5",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rollup": "^2.16.1",
    "rollup-plugin-typescript2": "^0.29.0",
    "ts-jest": "^26.1.0",
    "typescript": "^4.0.2"
  },
  "peerDependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-table": "^7.2.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/src/importJestDOM.ts"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
